                $data[] = '<div class="left">'.locales::$text[report_place_back].'</div>';
                 
                       $data[] = "<div class='right2'>".($reservation->ticket_type == 0 || $reservation->ticket_type == 2 ? locales::$text[none] : $reservation->place_back)."</div>";
