html{
    width: 100%;
    height: 100%;
}

body{
    margin: 0;
    padding: 0;
    background: gray;
    width: 100%;
    height: 100%;
    font-family: Arial;
}

body * {
    font-size: 15px;
}

.wrapper{
    width: 100%;
    height: 100%;
}



.menu{
    background-color:#cfcfcf;
    padding:10px;
    height: 68px
}

.menu a{
    float:left;
    background-color:white;
    padding:1px;
    text-decoration:none;
    color:black;
    min-width: 140px;
    margin-right: 5px;
    text-align:center;
    margin-bottom: 2px;
}

.contents{
    float:left;
    margin-top:10px;
    background-color:#cfcfcf;
    color:black;
    min-width:1000px;
    min-height:500px;
    padding:10px;
    vertical-align: top;
}

.contents a{
    color:black;
}

.forms{
    background-color:white;
    padding:10px;
}

.sublines{;
    border:1px solid silver;
}

.active{
    background-color:white;
}

.inactive{
    background-color:gray;
}

input[type=text],
input[type=password] {
    border:1px solid silver;
}

textarea{
    border:1px solid silver;
}

th{
    text-align:left;
}

.errors{
    width:40%;
    margin-left:30%;
    margin-right:30%;
    color:red;
    border:1px solid silver;
    margin-bottom:10px;
}

.places{
    float:left;
    padding:10px;
    width:290px;
    margin-left:10px
}

.notreserved{
    float:left;
    width:40px;
    height:40px;
    font-size:30px;
    color:green;
    text-align:center;
    border:2px solid green;
    line-height:40px;
    margin-left:10px;
    margin-bottom:10px;
    cursor:pointer;
}

.reserved{
    float:left;
    width:40px;
    height:40px;
    font-size:30px;
    color:red;
    text-align:center;
    border:2px solid red;
    line-height:40px;
    margin-left:10px;
    margin-bottom:10px;
    cursor:default;
}

.clicked{
    float:left;
    width:40px;
    height:40px;
    font-size:30px;
    color:blue;
    text-align:center;
    border:2px solid blue;
    line-height:40px;
    margin-left:10px;
    margin-bottom:10px;
    cursor:pointer;
}